<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-2">
            <div class="card-content white-text ">
                <span class="card-title">
                    <a href="/mzk" class="btn waves-effect waves-light tooltipped back" data-position="top"
                        data-tooltip="Вернуться назад"><i class="arrow-back material-icons">
                            keyboard_backspace
                        </i></a>
                    <a href="/mzk/check-cover/update" class="btn waves-effect waves-light tooltipped updateBase right"
                        data-position="top" data-tooltip="Применить обновления / Перерасчет">Применить</a>
                    <button class="btn waves-effect waves-light tooltipped modal-trigger" data-target="modal1"
                        data-position="top" data-tooltip="Сохранить текущий список"> <i class="material-icons">save</i>
                    </button>
                </span>
                <div id="modal1" class="modal ">
                    <div class="modal-content blue-grey darken-2">
                        <form action="/save-actions" method="POST">
                            <div class="input-field ">
                                <input type="text" name="name_list" id="autocomplete-input"
                                    class="autocomplete name-list white-text" minlength="3" maxlength="50" required>
                                <label for="autocomplete-input" class="white-text">Введите название списка</label>
                                <div>
                                    <br>
                                    <button type="submit"
                                        class="btn waves-effect waves-light saveActions">Сохранить</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 ">
        <div class="card blue-grey darken-2 mzk-actions">
            <div class="card-content white-text no-cover-list">
                <span class="card-title">
                    <strong> Список непокрытых actions</strong>
                </span>
            </div>
            <div id="noCoverList" class="card-content white-text no-cover-list">
                {{#if allApiUpdateList.length}}
                <table class="highlight ">
                    <tbody>
                        {{#each allApiUpdateList}}
                        <tr>
                            <td><strong>{{action}}</strong></td>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>
                                <button class="btn btn-small red darken-1 waves-effect waves-light js-remove"
                                    data-id={{id}}>
                                    <i data-id={{id}} class="material-icons trash js-remove">delete_forever</i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p>Примените обновление</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>