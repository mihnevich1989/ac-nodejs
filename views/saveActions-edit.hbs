<div class="row">
    <div class="col s12 ">
        <div class="card blue-grey darken-2 mzk-actions">
            <div class="card-content white-text no-cover-list edit-watch">
                <span class="card-title">
                    <a href="/save-actions" class="btn waves-effect waves-light tooltipped back" data-position="top"
                        data-tooltip="Вернуться назад"><i class="arrow-back material-icons">
                            keyboard_backspace
                        </i></a>
                    <strong> {{list.list_name}}</strong>
                    <a class="waves-effect waves-light btn modal-trigger right tooltipped reAnalitic"
                        data-position="top" data-tooltip="Проверка покрытия по текущему списку" href="#modal1"><i
                            class="material-icons">analytics</i></a>
                    <button class="btn waves-effect waves-light right tooltipped reloadPage" data-position="top"
                        data-tooltip="Синхронизировать изменения"><i class="material-icons">sync_alt</i></button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 ">
        <div class="card blue-grey darken-2 mzk-actions">
            <div id="noCoverList" class="card-content white-text no-cover-list edit-watch">
                {{#if list.actions.length}}
                <table class="highlight">
                    <tbody>
                        {{#each list.actions}}
                        <tr>
                            <td><b>{{action}}</b></td>
                            <td>{{name}}</td>
                            <td>{{description}}</td>
                            <td>
                                <button class="btn btn-small red darken-1 waves-effect waves-light js-remove"
                                    data-id={{id}}>
                                    <i data-id={{id}} class="material-icons trash js-remove">delete_forever</i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p>Нет actions</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
<div id="modal1" class="modal bottom-sheet">
    <div class="modal-content">
        {{#if list.actions.length}}
        <span hidden class="editApi">{{list.actions.length}}</span>
        <span hidden class="coverApi">{{cover}}</span>
        <span hidden class="noCoverApi">{{noCover.length}}</span>
        <div class="row">
            <div class="col s4 offset-s1">
                <canvas id="myChart"></canvas>
            </div>

            <div class="col s4 offset-s1">
                <ul class="collection">
                    <li class="collection-item avatar">
                        <i class="material-icons circle">storage</i>
                        <span class="title">Всего в базе</span>
                        <p><b class="allApi">{{allApiBase.length}}</b> &#32 actions</p>
                    </li>
                    <li class="collection-item avatar">
                        <i class="material-icons circle green">insert_chart</i>
                        <span class="title">Задействовано с учетом удаленных</span>
                        <p>
                            <b class="coverApi">{{cover}}</b> actions

                        </p>
                    </li>
                    <li class="collection-item avatar">
                        <i class="material-icons circle orange">help_outline</i>
                        <span class="title">Всего не задействованных</span>
                        <p>
                            <b class="percent noCoverApi">{{noCover.length}}</b> actions
                        </p>
                    </li>
                    <li class="collection-item avatar">
                        <i class="material-icons circle red">priority_high</i>
                        <span class="title">Всего непокрытых с учетом удаленных</span>
                        <p>
                            <b class="percent editApi">{{list.actions.length}}</b> actions

                        </p>
                    </li>
                </ul>
            </div>
        </div>
        {{else}}
        <h1>Actions нет!</h1>
        {{/if}}

    </div>
</div>