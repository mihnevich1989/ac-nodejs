<div class="row">
    <div class="col s12 ">
        <div class="card blue-grey darken-2 ">
            <h2 class="center-align white-text">АИС "Литейные Мощности"</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="statistic ">
        <div class="col s5 ">
            <ul class="collection">
                <li class="collection-item avatar">
                    <i class="material-icons circle">storage</i>
                    <span class="title">Всего в базе</span>
                    <p><b class="allApi">{{allApiBase.length}}</b> &#32 actions</p>
                </li>
                <li class="collection-item avatar">
                    <i class="material-icons circle green">insert_chart</i>
                    <span class="title">Всего задействованных</span>
                    <p>
                        <b class="coverApi">{{cover}}</b> actions
                        <b class="right">{{percent.cover}}%</b>
                    </p>
                </li>
                <li class="collection-item avatar">
                    <i class="material-icons circle orange">help_outline</i>
                    <span class="title">Всего не задействованных</span>
                    <p>
                        <b class="percent noCoverApi">{{noCover.length}}</b> actions
                        <b class="right">{{percent.noCover}}%</b>
                    </p>
                </li>
                <li class="collection-item avatar">
                    <i class="material-icons circle red">priority_high</i>
                    <span class="title">Показатели по редактируемому списку</span>
                    <p>
                        <b class="percent editApi">{{allApiUpdateList.length}}</b> непокрытых actions
                        <b class="right">{{percent.noCoverEdit}}%</b>
                    </p>
                </li>
            </ul>
        </div>
    </div>
    <div class="col s5 offset-s2 mzk">
        <form action="/lit" method="POST">
            <div class="input-field col s12">
                <i class="material-icons prefix">textsms</i>
                <input type="text" name="txt" id="autocomplete-input" class="autocomplete txt">
                <label for="autocomplete-input">Введите id коллекции</label>
                <textarea hidden name="api" id="api"></textarea>
                <button type="submit" class="btn waves-effect waves-light apiSubmit" disabled>Перейти к списку
                </button>
                <div>
                    {{#if allApiPostman.length}}
                    <a href="/lit/check-cover" class="btn waves-effect waves-light prevResult">Редактируемый
                        список</button></a>
                    {{else}}
                    <a href="/lit/check-cover" class="btn prevResult" disabled>Предыдущий список</button></a>
                    {{/if}}
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s5 ">
        <canvas id="myChart"></canvas>
    </div>
</div>